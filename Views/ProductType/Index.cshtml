@model List<ProductType>
<br />
<div class="row ">
    <div class="col-6">
        <h2 class="text-info">Product Type List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="New" class="btn btn-info text-white fw-bold" >
            <i class="fa fa-plus" style="font-size:1.2rem;color:white"></i>
            New Product Type
        </a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                Product Type
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductTypeName</td>
                <td class="text-end">
                    <a href="/ProductType/Edit/@item.Id" class="btn btn-primary">
                        <i class='fas fa-edit' style='font-size:1.4rem'></i>
                    </a>
                    <a href="/ProductType/Delete/@item.Id" class="btn btn-danger">
                        <i class='far fa-trash-alt' style='font-size:1.4rem'></i>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
@section Scripts
{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script>
        $(function(){
            var save = '@TempData["Save"]';
            var edit = '@TempData["edit"]';
            if(save!=null)
            {
                alertify.success(save);
            }
           if (edit != null) {
                alertify.success(edit);
            }
        })

    </script>
}