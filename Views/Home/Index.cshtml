@model List<Products>

<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:2rem;color:steelblue">@item.Name</label>
                    </h4>
                </div>
                <img src="~/images/@item.Image" style="height:400px" class="card-img-top">
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="color:#a51313;font-size:1.7rem">Price: @item.Price</label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-productId="@item.Id" class="btn btn-outline-info pull-right">
                            <i class="fas fa-eye text-info"></i> Detais</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>